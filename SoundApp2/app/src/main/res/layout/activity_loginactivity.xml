<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#99C9CF"
tools:context=".Loginactivity">
<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:gravity="center"
    android:text="KUSOUNDOT Login"
    android:textColor="#5C278E"
    android:textSize="36sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/inputID" />
<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:gravity="center"
    android:layout_gravity="center"
    android:text=""
    android:textColor="#5C278E"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/inputID" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:gravity="center"
    android:layout_gravity="center"
    android:text=""
    android:textColor="#5C278E"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/inputID" />

<EditText
    android:id="@+id/inputID"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:hint="ID를 입력하세요!"
    android:ems="10"
    android:inputType="textPersonName" />
<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:gravity="center"
    android:layout_gravity="center"
    android:text=""
    android:textColor="#5C278E"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/inputID" />

<EditText
    android:id="@+id/inputPW"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:hint="패스워드를 입력하세요!"
    android:ems="10"
    android:inputType="textPassword" />
<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:gravity="center"
    android:layout_gravity="center"
    android:text=""
    android:textColor="#5C278E"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/inputID" />
<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:gravity="center"
    android:layout_gravity="center"
    android:text=""
    android:textColor="#5C278E"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/inputID" />

<Button
    android:id="@+id/loginButton"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    android:gravity="center"
    android:text="Login"
    android:textColor="#ffffff" />
<TextView
    android:id="@+id/textView8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:gravity="center"
    android:layout_gravity="center"
    android:text=""
    android:textColor="#5C278E"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/inputID" />

<Button
    android:id="@+id/MakeButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/purple_200"
    android:text="회원가입"
    android:textColor="#ffffff" />
<TextView
    android:id="@+id/textView9"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center"
    android:gravity="center"
    android:layout_gravity="center"
    android:text=""
    android:textColor="#5C278E"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/inputID" />

<Button
    android:id="@+id/NologinButton"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    android:text="비회원으로 이용하기"
    android:textColor="#ffffff" />


</LinearLayout>